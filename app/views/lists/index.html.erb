<div class="banner shadow-lg" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80);">
  <div class="container text-center">
    <h1>Save any kind of movies</h1>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>

<div class="container mt-5">
  <div class="container mt-5">
        <h4 style="padding: 0 10px 10px 20px;">My lists</h4>
      <div class="d-flex">
          <% @lists.each do |list| %>
            <div class="mx-3">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.image_url %>')">
                <%= link_to list.name, list_path(list), style: "text-decoration: none; color: #ffffff; font-size: 18px; font-weight: bold; " %>
         <%= link_to "❌", list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link"%>
            </div>
            </div>
          <% end %>
    </div>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-success text-white rounded-pill ml-3 mt-4 shadow mb-5"%>
</div>
</div>
